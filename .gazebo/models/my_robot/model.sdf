<?xml version='1.0'?>
<sdf version='1.4'>
	<model name="my_robot">
		<!-- Step 1: Make model static -->
		<!--<static>true</static>-->
		<!--------------------------------->

		<!-- Step 6: Make model dynamic -->
		<static>false</static>
		<!--------------------------------->

		<!-- Step 2: Add rectangular base -->
		<link name='chassis'>
			<pose>0 0 .1 0 0 0</pose>

			<collision name='collision'>
				<geometry>
					<box>
						<size>.4 .2 .1</size>
					</box>
				</geometry>
			</collision>
			<!--
			<visual name='visual'>
				<geometry>
					<box>
						<size>.4 .2 .1</size>
					</box>
				</geometry>
			</visual>
		-->
		<!-- Added to attach a mesh-->
		<visual name='visual'>
			<geometry>
				<mesh>
					<!-- Raise the visual along the z-axis (step 7)-->
					<pose>0 0 0.05 0 0 0</pose>
					<!------------------------>
					<uri>model://pioneer2dx/meshes/chassis.dae</uri>
					<!-- This modifies visual to have a scaling factor (Step 6) -->
					<scale>0.9 0.5 0.5</scale>
					<!------------------------>
				</mesh>
			</geometry>
		</visual>
		<!----------------------->

		

		<!-- Step 3: Add a caster --------->
		<collision name='caster_collision'>
			<pose>-0.15 0 -0.05 0 0 0</pose>
			<geometry>
				<sphere>
					<radius>.05</radius>
				</sphere>
			</geometry>

			<surface>
				<friction>
					<ode>
						<mu>0</mu>
						<mu2>0</mu2>
						<slip1>1.0</slip1>
						<slip2>1.0</slip2>
					</ode>
				</friction>
			</surface>
		</collision>

		<visual name='caster_visual'>
			<pose>-0.15 0 -0.05 0 0 0</pose>
			<geometry>
				<sphere>
					<radius>.05</radius>
				</sphere>
			</geometry>
		</visual>
		<!--------------------------------->
	</link>
	<!--------------------------------->

	<!-- Step 4: Add left wheel --------->
	<link name="left_wheel">
		<pose>0.1 0.13 0.1 0 1.5707 1.5707</pose>
		<collision name="collision">
			<geometry>
				<cylinder>
					<radius>.1</radius>
					<length>.05</length>
				</cylinder>
			</geometry>
		</collision>
		<visual name="visual">
			<geometry>
				<cylinder>
					<radius>.1</radius>
					<length>.05</length>
				</cylinder>
			</geometry>
		</visual>
	</link>
	<!--------------------------------->

	<!-- Step 5: Add right wheel --------->
	<link name="right_wheel">
		<pose>0.1 -0.13 0.1 0 1.5707 1.5707</pose>
		<collision name="collision">
			<geometry>
				<cylinder>
					<radius>.1</radius>
					<length>.05</length>
				</cylinder>
			</geometry>
		</collision>
		<visual name="visual">
			<geometry>
				<cylinder>
					<radius>.1</radius>
					<length>.05</length>
				</cylinder>
			</geometry>
		</visual>
	</link>
	<!--------------------------------->

	<!-- Step 7: Add two hinges joints for the left and right wheels-->
	<joint type="revolute" name="left_wheel_hinge">
		<pose>0 0 -0.03 0 0 0</pose>
		<child>left_wheel</child>
		<parent>chassis</parent>
		<axis>
			<xyz>0 1 0</xyz>
		</axis>
	</joint>

	<joint type="revolute" name="right_wheel_hinge">
		<pose>0 0 0.03 0 0 0</pose>
		<child>right_wheel</child>
		<parent>chassis</parent>
		<axis>
			<xyz>0 1 0</xyz>
		</axis>
	</joint>
	<!---------------------------------------------------------------->

	<!-- Adding a Laser to a the robot-->
	<!-- <include> block tells gazebo to find a model & insert it a a given <pose> realtive to the parent model-->
	<include>
		<!-- <uri> block tells Gazebo where to find the model inside its model database-->
		<uri>model://hokuyo</uri>
		<pose>0.2 .1 0.15 0 0 0</pose>
	</include>
	<joint name="hokuyo_joint" type="revolute">
		<!-- <child> name in the joint is derived from the hokuyo model's SDF -->
		<child>hokuyo::link</child>
		<parent>chassis</parent>
		<axis>
			<xyz>0 0 1</xyz>
			<limit>
				<upper>0</upper>
				<lower>0</lower>
			</limit>
		</axis>
	</joint>
	<!------------------------------------>
	<!-- Adding a camera -->
	<include>
		<uri>model://camera</uri>
		<pose>0.2 -.1 0.1 0 0 0</pose>
	</include>
	<joint name="camera_joint" type="revolute">
		<child>camera::link</child>
		<parent>chassis</parent>
		<axis>
			<xyz>0 0 1</xyz>
			<limit>
				<upper>0</upper>
				<lower>0</lower>
			</limit>
		</axis>
	</joint>
	<!---------------------------->
</model>
</sdf>